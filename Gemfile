source "https://rubygems.org"

# Solo usa la gema github-pages, que ya trae Jekyll y todo lo necesario
gem "github-pages", group: :jekyll_plugins

# Si querés otros plugins compatibles, ponelos en el mismo grupo
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.6"
end

# Para Windows (si es necesario)
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]

# Solo si necesitás webrick (usualmente para servir local)
gem "webrick"
